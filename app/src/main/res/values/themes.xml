<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.BeautyHome" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:calendarViewStyle">@style/Widget.CalendarView.Custom</item>
    </style>

    <style name="Widget.CalendarView.Custom" parent="android:Widget.Material.CalendarView">
        <item name="android:focusedMonthDateColor">@color/purple_200</item>
        <item name="android:weekNumberColor">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>